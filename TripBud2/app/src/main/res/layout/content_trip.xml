<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_trip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dragostrett.tripbud.TripActivity"
    tools:showIn="@layout/activity_trip">

    <TextView
        android:text="You are not part of any trip at the moment"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="invisible"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView_trip"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="invisible"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_trip"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView_place"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="invisible"/>

    <Button
        android:text="Delete Trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:id="@+id/button4"
        android:onClick="deleteTrip"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_username"
        android:hint="Username"
        android:visibility="invisible"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Add User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:onClick="addUser"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/editText_username"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Create new Trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:visibility="invisible"
        android:onClick="createTrip"
        android:layout_above="@+id/button4"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editText_username"
        android:layout_alignEnd="@+id/editText_username"
        android:id="@+id/editText_deleteUser"
        android:hint="name"
        android:visibility="invisible"/>

    <Button
        android:text="Remove User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:id="@+id/button_deleteUser"
        android:visibility="invisible"
        android:onClick="removeUser" />

    <Button
        android:text=" See participants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:onClick="seeUsers"
        android:visibility="invisible"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp" />

    <Button
        android:text="Edit Range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRange"
        android:visibility="invisible"
        android:onClick="editRange"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Delete Range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_delete_range"
        android:visibility="invisible"
        android:onClick="deleteRange"
        android:layout_above="@+id/editText_username"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_organizator"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="invisible"
        android:layout_below="@+id/textView_place"
        android:layout_alignStart="@+id/textView_place" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPeriod"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="invisible"
        android:layout_below="@+id/textView_organizator"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
